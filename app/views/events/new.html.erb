<turbo-frame id="new_event_form">

<%= form_with(
  model: @event,
  data: {
    url: events_path(@event)
  },
  class: "min-w-full mt-2 border flex flex-col"
) do |f| %>

  <%= f.label :title, 'title:' %>
  <%= f.text_field :title, class: "border p-4" %>

  <%= f.label :description, 'description:' %>
  <%= f.text_field :description, class: "border p-4" %>

  <%= f.label :start_date, 'starting at:' %>
  <%= f.date_field(:start_date, { class: "form-control datepicker", placeholder: "Required Delivery Date", min: Date.today }) %>

  <%= f.label :end_date, 'ending at:' %>
  <%= f.date_field(:end_date, { class: "form-control datepicker", placeholder: "Required Delivery Date", min: Date.today }) %>

  <div class="field">
    <%= f.submit 'Create event', { class: 'border p-4'} %>
  </div>
<% end %>

</turbo-frame>