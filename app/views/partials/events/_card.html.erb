<div class='flex justify-between gap-10'>
  <div>
    <span class="block">
      <%= event.title %>
    </span>
    <span class="block">
      <%= event.description %>
    </span>
  </div>
  <div>
    <span class="block">
      <%= "from: #{event.start_date}" %>
    </span>
    <span class="block">
      <%= "to: #{event.end_date}" %>
    </span>
  </div>
</div>
<span class="block">
  <%= "--- #{event.creator.username} ---" %>
</span>
