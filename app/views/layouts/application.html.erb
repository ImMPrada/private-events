<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="w-full flex justify-end pt-10 mb-10 px-5 gap-5">
      <% if user_signed_in? %>
        <%= link_to(
          "all events",
          events_path,
          class: "btn-session"
        ) %>
        <%= link_to(
          "your profile",
          profile_path,
          class: "btn-session"
        ) %>
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn-session" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn-session" %>
        <%= link_to "Sign in", new_user_session_path, class: "btn-session" %>
      <% end %>
    </div>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
