<div class='w-full flex flex-col gap-10 px-10'>

  <div id="<%= dom_id @user %>_user" class='w-full flex flex-col gap-2'>
    <h3 class="block">
      USER:
    </h3>
    <h3 class="block">
      <%= @user.username %>
    </h3>
    <h3 class="block">
      <%= @user.email %>
    </h3>
  </div>

  <div class='w-full flex flex-col gap-5'>
    <h3 class="block">
      ACTIVE EVENTS:
    </h3>
    <%= render partial: 'partials/events/list', locals: { events: @future_events } %>
  </div>

  <div class='w-full flex flex-col gap-5'>
    <h3 class="block">
      PAST EVENTS:
    </h3>
    <%= render partial: 'partials/events/list', locals: { events: @past_events } %>
  </div>

</div>
